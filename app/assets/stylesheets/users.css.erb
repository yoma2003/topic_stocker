  margin-bottom: 0;
}

.about_function_image {
  width: 525px;
}

.about_function_text {
  text-align: left;
  width: 360px;
}

.about_function:nth-child(even) > .about_function_text {
  text-align: right;
}

.about_function_title {
  font-size: 28px;
}

.about_function_text p {
  margin-top: 25px;
  font-size:20px;
  font-weight: bold;
}

.about_message {
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 8px;
  text-align: center;
  margin-top: 40px;
  padding: 60px;
}

.about_main_slogan {
  font-size: 40px;
}

.about_main_login {
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 8px;
  text-align: center;
  margin-top: 40px;
  padding: 60px;
}

.about_main_login_logo {
  width: 360px;
  margin: 30px auto 20px;
}

.about_main_login_logo img {
  width: 100%;
  border-radius: 5px;
}

.about_main_login_nav {
  width: 360px;
  margin: 0 auto 20px;
  display: flex;
  justify-content: space-between;
}