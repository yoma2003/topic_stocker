}

.about_image {
  width: 100%;
  height: 100%;
}

.about_main_sample_image {
  width: 840px;
  margin: 60px auto 0;
  /* margin-top: 60px; */
}

.about_functions {
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 8px;
  text-align: center;
  margin-top: 40px;
  padding: 60px;
}

.about_function {
