/* ログインページ */

.user_contents_wrapper {
  height: 100vh;
  width: 100vw;
  display: flex;
  align-items: center;
  background: url("<%= asset_path('main_back.jpg') %>") center/cover;
}

.user_contents {
  margin: 0 auto;
  padding-top: 30px;
  text-align: center;
}

.main_slogan {
  font-size: 40px;
  font-weight: bold;
  color: #770099;
}

.login_logo {
  margin: 30px auto;
  width: 565px;
  height: 105px;
}

.login_logo img {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.login_field {
  margin-top: 30px;
  width: 360px;
  margin: 0 auto;
}

.login_input {
  padding: 10px 20px;
  width: 100%;
  border: 1px solid #770099;
  border-radius: 5px;
  font-size: 18px;
  display: block;
}

.login_input + .login_input {
  margin-top: 15px;
}

.login_btn {
  margin-top: 20px;
  padding: 10px 20px;
  width: 100%;
  background-color: #770099;
  border: none;
  border-radius: 5px;
  letter-spacing: 1px;
  font-size: 20px;
  display: block;
  color: #fff;
  cursor: pointer;
}

.login_btn:hover,
.signin_btn:hover,
.user_update_btn:hover {
  background-color: #5a0073;
}

.other_link {
  margin-top: 30px;
  display: flex;
  justify-content: space-between;
}

.other_link a {
  font-size: 20px;
  color: #770099;
}

.other_link a:hover {
  text-decoration: underline;
}

/* サインインページ */

.signin_logo {
  width: 360px;
  height: 68px;
}

.signin_logo img {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.user_page_title {
  margin: 22px 0;
  font-size: 26px;
  letter-spacing: 1px;
  color: #770099;
  font-weight: bold;
}

.signin_field {
  margin-top: 30px;
  width: 360px;
  margin: 0 auto;
}

.signin_btn,
.user_update_btn {
  margin-top: 35px;
  padding: 10px 20px;
  width: 100%;
  background-color: #770099;
  border: none;
  border-radius: 5px;
  letter-spacing: 1px;
  font-size: 20px;
  display: block;
  color: #fff;
  cursor: pointer;
}

.login_link {
  margin-top: 30px;
}

.login_link a {
  font-size: 20px;
  color: #770099;
}

.login_link a:hover {
  text-decoration: underline;
}

/* ユーザー編集ページ */

.user_edit_logo {
  width: 600px;
  height: 68px;
  border-radius: 5px;
  background-color: #770099;
}

.user_edit_logo img{
  height: 100%;
}

.user_edit_field {
  width: 600px;
  margin-top: 30px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}

.user_edit_field_left {
  width: 240px;
  position: relative;
}

.user_image_field {
  margin: 0 auto;
  width: 145px;
  height: 145px;
  position: relative;
}

.selected_user_image_wrapper {
  width: 145px;
  height: 145px;
  border-radius: 50%;
  border: 1px solid #770099;
  cursor: pointer;
  position: relative;
}

.selected_user_image_wrapper::after {
  display: none;
  content: "";
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.3;
}

.selected_user_image_wrapper:hover::after {
  display: block;
}

.selected_user_image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

#edit_user_image {
  display: none;
}

.user_camera_btn {
  width: 34px;
  height: 34px;
  padding: 1px 0 0 7px;
  font-size: 18px;
  background-color: #fff;
  color: #770099;
  border: 1px solid #770099;
  border-radius: 50%;
  cursor: pointer;
  position: absolute;
  bottom: 4px;
  right: 4px;
}

.user_camera_btn::after {
  display: none;
  content: "";
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.3;
}

.user_camera_btn:hover::after {
  display: block;
}

.user_camera_btn:hover {
  color: #cd9bda;
}

.user_edit_field_right {
  width: 360px;
  padding-top: 20px;
}

.user_delete_link {
  margin-top: 30px;
}

.user_delete_link a {
  font-size: 20px;
  color: #770099;
}

.user_delete_link a:hover {
  text-decoration: underline;
}